@page "/assets/assethistorycreate/{assetid}"
@using BWERP.Repositories.Interfaces

@inject IAssetApiClient assetApiClient
@inject IToastService toastService
@inject NavigationManager NavigationManager;
@inject IJSRuntime JS

<div class="app-content pt-3 p-md-3 p-lg-4">
	<div class="container-xl">
		<h1 class="app-page-title">Add Asset History</h1>
		<hr class="mb-4">
		<div class="row g-4 settings-section">
			<div class="app-card app-card-settings shadow-sm p-4">
				<div class="app-card-body">
					<EditForm Model="assetHistoryCreateDto" OnValidSubmit="SubmitTask">
						<DataAnnotationsValidator />
						
						<div class="mb-3">
							<label for="Name" class="form-label">Description</label>
							<InputText class="form-control" @bind-Value="assetHistoryCreateDto.Description"></InputText>
							<ValidationMessage For="()=>assetHistoryCreateDto.Description"></ValidationMessage>
						</div>
						<div class="mb-3">
							<label for="Description" class="form-label">Event</label>
							<InputText class="form-control" @bind-Value="assetHistoryCreateDto.Event"></InputText>
							<ValidationMessage For="()=>assetHistoryCreateDto.Event"></ValidationMessage>
						</div>
						<button type="submit" class="btn app-btn-primary">Save Changes</button>
						<a class="btn app-btn-secondary" href="/assets/assetlist">Cancel</a>
					</EditForm>
				</div><!--//app-card-body-->
			</div><!--//app-card-->
		</div><!--//row-->
	</div><!--//container-fluid-->
</div>
<!--//app-content-->
