							</svg>
						</div><!--//icon-holder-->

					</div><!--//col-->
					<div class="col-auto">
						<h4 class="app-card-title">Search</h4>
					</div><!--//col-->
				</div><!--//row-->
			</div><!--//app-card-header-->

			<EditForm Model="@assetSearch" OnSubmit="@SearchForm">
				<div class="app-card-body px-4">
					<div class="intro">
						<div class="row">
							<div class="col-auto">
								<label class="form-label">Name</label>
								<InputText class="form-control" @bind-Value="@assetSearch.Name"></InputText>
							</div>
							<div class="col-auto">
								<label class="form-label">Category</label>
								<InputSelect class="form-select" @bind-Value="@assetSearch.CategoryId">
									<option value="">-- Select Category --</option>
									@foreach (var category in assetCategories)
									{
										<option value="@category.Id">@category.Name</option>
									}
								</InputSelect>
							</div>
							<div class="col-auto">
								<label class="form-label">Location</label>
								<InputText class="form-control" @bind-Value="@assetSearch.Location"></InputText>
							</div>
							<div class="col-auto">
								<label class="form-label">Status</label>
								<InputSelect class="form-select" @bind-Value="@assetSearch.CategoryId">
									<option value="">-- Select Category --</option>
									@foreach (var category in assetCategories)
									{
										<option value="@category.Id">@category.Name</option>
									}
								</InputSelect>
							</div>
						</div>

					</div>
				</div><!--//app-card-body-->
				<div class="app-card-footer p-4 mt-auto">
					<button type="submit" class="btn app-btn-secondary">Search</button>
				</div><!--//app-card-footer-->
			</EditForm>
		</div>
	</div>
	@*ASSET LIST*@
	<div class="row">
		<div class="app-card app-card-stats-table h-100 shadow-sm">
			<div class="app-card-header p-3">
				<div class="row justify-content-between align-items-center">
					<div class="col-auto">
						@*<a href="#" @onclick="ExportToExcel">Export</a>*@
						<a href="/assets/assetcreate" class="btn btn-outline-success">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
								<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
								<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
							</svg>
							Add New
						</a>
						<button class="btn btn-outline-info">
							<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-download me-1" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z" />
								<path fill-rule="evenodd" d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z" />
							</svg>
							Export Excel
						</button>
					</div><!--//col-->
				</div><!--//row-->
			</div><!--//app-card-header-->
			<div class="app-card-body p-3 p-lg-4">
				<div class="table-responsive">
					<table class="table table-bordered auto-resize">
						<thead class="table-info">
							<tr class="text-center">
								<th>Code</th>
								<th>Name</th>
								<th>Category</th>
								<th>Location</th>
								<th>Status</th>
								<th>Purchase Date</th>
								<th>Purchase Price</th>
								<th>Assigned To</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in assetView)
							{
								<tr>
									<td>@item.Id</td>
									<td>@item.SerialNo</td>
									<td>@item.CategoryName</td>
									<td class="text-center">@item.Location</td>
									<td class="text-center">@item.StatusId</td>
									<td class="text-center">@item.PurchaseDate.ToString("yyyy-MM-dd")</td>
									<td class="text-end">@string.Format("{0:N0}", item.PurchasePrice)</td>
									<td>@item.AssignedTo</td>
									<td class="text-center">
										<a href="/assets/assetdetail/@item.Id" class="btn btn-primary">Detail</a>
										<a href="/assets/assetedit/@item.Id" class="btn btn-warning">Edit</a>
										@* <button class="btn btn-danger" @onclick="()=> OnDeleteTask(item.Id)">Delete</button> *@
									</td>
								</tr>
							}
						</tbody>
						<tfoot>
							<Pagination MetaData="MetaData" Spread="2" SelectedPage="SelectedPage"></Pagination>
						</tfoot>
					</table>
				</div>

			</div><!--//app-card-body-->
		</div><!--//app-card-->
	</div>
</div>

