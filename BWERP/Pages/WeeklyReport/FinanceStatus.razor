@page "/weeklyreport/financestatus"
@using BWERP.Models.Comment;
@using BWERP.Pages.Components
@using BWERP.Repositories.Interfaces;

@*<SearchByMonth OnSubmit="SearchForm"></SearchByMonth>*@
@if (commentView == null)
{
	<LoadingIndicator></LoadingIndicator>
}
else
{
	<div class="col-12 mt-2">
		<div class="row mb-2" style="font-size:1.17em">
			<div class="app-card app-card-basic d-flex flex-column align-items-start shadow-sm">
				@*card header*@
					<div class="app-card-header p-1 border-bottom-1">
						<div class="row align-items-center gx-1">
							<div class="col-auto">
								<div class="app-icon-holder">
									<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-receipt" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
										<path fill-rule="evenodd" d="M1.92.506a.5.5 0 0 1 .434.14L3 1.293l.646-.647a.5.5 0 0 1 .708 0L5 1.293l.646-.647a.5.5 0 0 1 .708 0L7 1.293l.646-.647a.5.5 0 0 1 .708 0L9 1.293l.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .801.13l.5 1A.5.5 0 0 1 15 2v12a.5.5 0 0 1-.053.224l-.5 1a.5.5 0 0 1-.8.13L13 14.707l-.646.647a.5.5 0 0 1-.708 0L11 14.707l-.646.647a.5.5 0 0 1-.708 0L9 14.707l-.646.647a.5.5 0 0 1-.708 0L7 14.707l-.646.647a.5.5 0 0 1-.708 0L5 14.707l-.646.647a.5.5 0 0 1-.708 0L3 14.707l-.646.647a.5.5 0 0 1-.801-.13l-.5-1A.5.5 0 0 1 1 14V2a.5.5 0 0 1 .053-.224l.5-1a.5.5 0 0 1 .367-.27zm.217 1.338L2 2.118v11.764l.137.274.51-.51a.5.5 0 0 1 .707 0l.646.647.646-.646a.5.5 0 0 1 .708 0l.646.646.646-.646a.5.5 0 0 1 .708 0l.646.646.646-.646a.5.5 0 0 1 .708 0l.646.646.646-.646a.5.5 0 0 1 .708 0l.646.646.646-.646a.5.5 0 0 1 .708 0l.509.509.137-.274V2.118l-.137-.274-.51.51a.5.5 0 0 1-.707 0L12 1.707l-.646.647a.5.5 0 0 1-.708 0L10 1.707l-.646.647a.5.5 0 0 1-.708 0L8 1.707l-.646.647a.5.5 0 0 1-.708 0L6 1.707l-.646.647a.5.5 0 0 1-.708 0L4 1.707l-.646.647a.5.5 0 0 1-.708 0l-.509-.51z" />
										<path fill-rule="evenodd" d="M3 4.5a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 1 1 0 1h-6a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5zm8-6a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 0 1h-1a.5.5 0 0 1-.5-.5z" />
									</svg>
								</div><!--//icon-holder-->

							</div><!--//col-->
							<div class="col-auto">
								<h3 class="app-card-title">Accounting</h3>
							</div><!--//col-->
						</div><!--//row-->
					</div>
					<!--//app-card-header-->

				@if (_outstandingDtos != null)
				{
					<!-- table-->
					<div class="row" style="width:100%">
						<div class="app-card-body p-3">
							<div class="table-responsive">
								<table class="table table-bordered">
									<thead class="table-grey">
										<tr class="text-center">
											<th>Department</th>
											<th>Excess Days</th>
											<th>Begin</th>
											<th>Increase</th>
											<th>Decrease</th>
											<th>End</th>
										</tr>
									</thead>
									<tbody>
										@foreach (var item in _getfirstrow)
										{
											<tr class="text-end">
												<td class="text-start">@item.Department</td>
												<td>@string.Format("{0:N0}",@item.Elapsdate)</td>
												<td>@string.Format("{0:N0}",@item.BeginAmount)</td>
												<td>@string.Format("{0:N0}",@item.IncreaseAmount)</td>
												<td>@string.Format("{0:N0}",@item.DecreaseAmount)</td>
												<td>@string.Format("{0:N0}",@item.EndAmount)</td>
											</tr>
										}
									</tbody>									
								</table>
								
							</div><!--//table-responsive-->
						</div><!--//app-card-body-->
					</div>

					<div class="row col-12">
						<div class="col-lg-4">
							<p>Total amount (USD): @string.Format("{0:N0}",iTotalAmount)</p>
						</div>
						<div class="col-lg-4">
							<p>Long term rate (%): @dRate</p>
						</div>
						<div class="col-lg-4">
							<p>Interest amount (USD): @string.Format("{0:N0}",iInterest)</p>
						</div>
					</div>
				}
				@*Outstanding Receivable Detail*@
				@*<div class="row m-lg-2">
					<button class="btn btn-outline-info" @onclick="ToggleDivVisibility">
						@(isDivVisible ? "Hide" : "View") Information
					</button>
				</div>*@
				@if (isDivVisible)
				{ 
					<!-- table-->
					<h2>Detail information of Receivable Status</h2>
					<div class="row" style="width:100%">
						<div class="app-card-body p-3">
							<div class="table-responsive">
								<table class="table table-bordered">
									<thead class="table-grey">
										<tr class="text-center">
											<th>Department</th>
											<th>Customer</th>
											<th>Excess Days</th>
											<th>Begin</th>
											<th>Increase</th>
											<th>Decrease</th>
											<th>End</th>
										</tr>
									</thead>
									<tbody>
										@foreach (var item in _outstandingdetailDto)
										{
											<tr class="text-end">
												<td class="text-start">@item.Department</td>
												<td class="text-start">@item.CustomerName</td>
												<td>@string.Format("{0:N0}",@item.Elapsdate)</td>
												<td>@string.Format("{0:N0}",@item.BeginAmount)</td>
												<td>@string.Format("{0:N0}",@item.IncreaseAmount)</td>
												<td>@string.Format("{0:N0}",@item.DecreaseAmount)</td>
												<td>@string.Format("{0:N0}",@item.EndAmount)</td>
											</tr>
										}
									</tbody>
									<tfoot class="table-light">
										<tr class="text-end">
											<th></th>
											<th></th>
											<th class="text-start">Total</th>
											<th>@string.Format("{0:N0}",isumbegin)</th>
											<th>@string.Format("{0:N0}",isumincrease)</th>
											<th>@string.Format("{0:N0}",isumdecrease)</th>
											<th>@string.Format("{0:N0}",isumend)</th>
										</tr>
									</tfoot>
								</table>

							</div><!--//table-responsive-->
						</div><!--//app-card-body-->
					</div>
				}

				@*Comment*@
				<div class="app-card-body" style="width:100%; padding-right:1.5rem">
					<div class="intro">
						<div class="row">
							@(new MarkupString(commentView.Content))
						</div>
					</div>
				</div>
			</div><!--//app-card-body-->
		</div><!--//app-card-->
	</div>
}

