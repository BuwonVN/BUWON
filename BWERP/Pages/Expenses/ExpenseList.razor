					</div><!--//col-->
					<div class="col-auto">
						<h4 class="app-card-title">Search</h4>
					</div><!--//col-->
				</div><!--//row-->
			</div><!--//app-card-header-->
			<EditForm Model="@expenseSearch" OnSubmit="@SearchForm">
				<div class="app-card-body px-4">
					<div class="intro">
						<div class="row">
							<div class="col-auto">
								<label class="form-label">Year</label>
								<InputSelect class="form-select" @bind-Value="@expenseSearch.Year">
									@foreach (var year in years)
									{
										<option value="@year">@year</option>
									}
								</InputSelect>
							</div>
							<div class="col-auto">
								<label class="form-label">Month</label>
								<InputSelect class="form-select" @bind-Value="@expenseSearch.Month">
									@foreach (var month in months)
									{
										<option value="@month.Key">@month.Value</option>
									}
								</InputSelect>
							</div>
							<div class="col-auto">
								<label class="form-label">Category</label>
								<InputSelect class="form-select" @bind-Value="@expenseSearch.CategoryId">
									<option value="">-- Select Category --</option>
									@foreach (var category in expenseCategory)
									{
										<option value="@category.Id">@category.Name</option>
									}
								</InputSelect>
							</div>
						</div>

					</div>
				</div><!--//app-card-body-->
				<div class="app-card-footer p-4 mt-auto">
					<button type="submit" class="btn app-btn-secondary">Search</button>
					<a href="/expenses/expensecreate" class="btn app-btn-primary">Add new</a>
				</div><!--//app-card-footer-->
			</EditForm>
		</div><!--//app-card-->
	</div>

	@*EXPENSE LIST*@
	<div class="row">
		<div class="app-card app-card-stats-table h-100 shadow-sm">
			<div class="app-card-header p-3">
				<div class="row justify-content-between align-items-center">
					<div class="col-auto">
						<h4 class="app-card-title">Expense List</h4>
					</div><!--//col-->
					<div class="col-auto">
						<div class="card-header-action">
							<a href="#">View report</a>
						</div><!--//card-header-actions-->
					</div><!--//col-->
				</div><!--//row-->
			</div><!--//app-card-header-->
			<div class="app-card-body p-3 p-lg-4">
				<div class="table-responsive">
					<table class="table table-bordered auto-resize">
						<thead class="table-info">
							<tr class="text-center">
								<th>Category</th>
								<th>Description</th>
								<th>Created date</th>
								<th>Amount</th>
								<th>Remark</th>
								<th>Created by</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in expenseView)
							{
								<tr>
									<td>@item.CategoryId</td>
									<td>@item.Description</td>
									<td>@item.CreatedDate</td>
									<td class="text-center">@item.CreatedUser</td>
									<td class="text-center">@item.Amount</td>
									<td>@item.Note</td>
									<td class="text-center">
										@*<a href="/users/userdetail/@item.Id" class="btn btn-primary">Detail</a>*@
										@*<a href="/users/useredit/@item.Id" class="btn btn-warning">Edit</a>*@
										@*<button class="btn btn-danger" @onclick="()=> OnDeleteTask(item.Id)">Delete</button>*@
									</td>
								</tr>
							}
						</tbody>
						<tfoot>
							<Pagination MetaData="MetaData" Spread="2" SelectedPage="SelectedPage"></Pagination>
						</tfoot>
					</table>
				</div><!--//table-responsive-->
			</div><!--//app-card-body-->
		</div><!--//app-card-->
	</div>
</div>
